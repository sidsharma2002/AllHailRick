<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    tools:context=".ui.main.CreatePost.CreatePostFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPostText"
        android:layout_marginTop="0sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp"
        app:boxBackgroundMode="none">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPostHeading"
            android:background="@null"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4sp"
            android:hint="Title"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:inputType="textShortMessage"
            android:maxLength="70"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintTop_toTopOf="@+id/etPostHeading"
            tools:layout_editor_absoluteX="-1dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPostText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="none"
        app:layout_constraintTop_toBottomOf="@+id/tilPostText">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etPostDescription"
        android:background="@null"
        android:layout_marginEnd="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:lineSpacingExtra="4sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:hint="Body"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="-1dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/createPostProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilPostText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="deploy!"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_marginTop="22sp"
        android:layout_marginEnd="36dp"
        app:cornerRadius="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilPostText1"/>
<View
    android:layout_width="match_parent"
    android:layout_height="100sp"
    app:layout_constraintTop_toBottomOf="@id/btnPost"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>